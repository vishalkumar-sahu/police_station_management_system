<!DOCTYPE html>
<html>
<head>
    <img src="Digital_India_logo.svg.png" alt="Digital India" height="100" width="400">
    <img src="" alt="">
    
<style>
	body 
		{
		font-family: Arial, Helvetica, sans-serif;
        
		margin-left:25%;
		margin-right:25%;
		border: 5px solid #000000;
		margin-bottom: 5px;
		padding: 0px 15px 0 15px;
		}
	input[type=text], input[type=password] 
		{
		width: 97%;
		padding: 10px;
		margin: 5px 0 22px 0;
		display: inline-block;
		border: none;
		background: #F5F5F5;
		}
	hr 
		{
		border: 1px solid #e6e6e6;
		margin-bottom: 5px;
		}
	.registerbutton
		{
		background-color: #C9E4FF;
		color: black;
		padding: 15px 20px;
		margin: 10px 0px;
		border: 4px solid ;
        border-radius: 15px;
		cursor: pointer;
		width: 100%;
		/* text:bold; */
		
    }
	

</style>

	<SCRIPT language=JavaScript>

		var message = "Right Click Disabled !!!!";
		
		function rtclickcheck(keyp){ if (navigator.appName == "Netscape" && keyp.which == 3){ alert(message); return false; }
		
		if (navigator.appVersion.indexOf("MSIE") != -1 && event.button == 2) { alert(message); return false; } }
		
		document.onmousedown = rtclickcheck;
		
	</SCRIPT>
</head>
<body>
	<form action="/admin/registerVehicle" method="post">
        
		<h1>Add Vehicles</h1>
		<p>Please fill in the details</p>
		<hr>

        <label for="vehicle_no"><b>Vehicle number</b></label>
		<input type="text" placeholder="Enter Vehicle number" name="vehicle_no" required><br>
        
		
		<label for="vehicle_type"><b>Vehicle Type</b></label>
		<input type="text" placeholder="Enter Vehicle type" name="vehicle_type" required>

		<input style="visibility: hidden; padding: 0px; margin: 0px;" type="text"  name="official_id" id="official_id" >
		<script>
			const official_id = document.querySelector("#official_id");
			official_id.value = localStorage.getItem('user')
		</script>
        
		<label for="description"><b>Description/Condition</b></label>
		<input type="text" placeholder="Enter Description" name="description"required><br>
		
       
		<hr>
		

		<button type="submit" class="registerbutton">Add Vehicle</button>

	</form>
  


</body>
</html>