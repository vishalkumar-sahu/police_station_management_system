<!DOCTYPE html>
<html>
<head>
    <img src="Digital_India_logo.svg.png" alt="Digital India" height="100" width="350">
    <img src="Modi_Tank.jpg" alt="Weapons" height="100" width="350">
    
<style>
	body 
		{
		font-family: Arial, Helvetica, sans-serif;
        
		margin-left:25%;
		margin-right:25%;
		border: 5px solid #000000;
		margin-bottom: 5px;
		padding: 0px 15px 0 15px;
		}
	input[type=text], input[type=password] 
		{
		width: 97%;
		padding: 10px;
		margin: 5px 0 22px 0;
		display: inline-block;
		border: none;
		background: #F5F5F5;
		}
	hr 
		{
		border: 1px solid #e6e6e6;
		margin-bottom: 5px;
		}
	.registerbutton
		{
		background-color: #C9E4FF;
		color: black;
		padding: 15px 20px;
		margin: 10px 0px;
		border: 4px solid ;
        border-radius: 15px;
		cursor: pointer;
		width: 100%;
		/* text:bold; */
		
    }
	

</style>

<SCRIPT language=JavaScript>

	var message = "Right Click Disabled !!!!";
	
	function rtclickcheck(keyp){ if (navigator.appName == "Netscape" && keyp.which == 3){ alert(message); return false; }
	
	if (navigator.appVersion.indexOf("MSIE") != -1 && event.button == 2) { alert(message); return false; } }
	
	document.onmousedown = rtclickcheck;
	
</SCRIPT>

</head>
<body>
	<form action="/admin/registerWeapon" method="post">
        
		<h1>Add Weapons</h1>
		<p>Please fill in the details</p>
		<hr>
		
		<label for="weapon_type"><b>Weapon Type</b></label>
		<input type="text" placeholder="Enter Weapon type" name="weapon_type" required><br>

        <label for="quantity"><b>Quantity</b></label>
		<input type="number" placeholder="Enter weapon quantity" name="quantity" required><br><br>

        <label for="no_of_bullets"><b>Number of Bullets</b></label>
		<input type="number" placeholder="Enter Number of Bullets" name="no_of_bullets" required>

		<input style="visibility: hidden; padding: 0px; margin: 0px;" type="text"  name="official_id" id="official_id" >
		<script>
			const official_id = document.querySelector("#official_id");
			official_id.value = localStorage.getItem('user')
		</script>
		
		<label for="description"><b>Description/Condition</b></label>
		<input type="text" placeholder="Enter Description" name="description"required><br>
		
       
		<hr>
		

		<button type="submit" class="registerbutton">Add Weapon</button>

        
		
  
		
		
		
	</form>
  


</body>
</html>