<!DOCTYPE html>
<html>
<head>
    <img src="Digital_India_logo.svg.png" alt="Digital India" height="100" width="400">
    
<style>
	body 
		{
		font-family: Arial, Helvetica, sans-serif;
        
		margin-left:25%;
		margin-right:25%;
		border: 5px solid #000000;
		border-radius: 10px;
		margin-bottom: 5px;
		padding: 0px 15px 0 15px;
		}
	input[type=text], input[type=password] 
		{
		width: 99%;
		padding: 10px;
		margin: 5px 0 22px 0;
		display: inline-block;
		border: none;
		background: whitesmoke;
		}
	hr 
		{
		border: 1px solid #e6e6e6;
		margin-bottom: 5px;
		}
	.registerbutton
		{
		background-color: #C9E4FF;
		color: black;
		padding: 15px 20px;
		margin: 10px 0px;
		border: 4px solid ;
        border-radius: 15px;
		cursor: pointer;
		width: 100%;
		font-weight:bold;
		
    }
	

</style>

<SCRIPT language=JavaScript>

	var message = "Right Click Disabled !!!!";
	
	function rtclickcheck(keyp){ if (navigator.appName == "Netscape" && keyp.which == 3){ alert(message); return false; }
	
	if (navigator.appVersion.indexOf("MSIE") != -1 && event.button == 2) { alert(message); return false; } }
	
	document.onmousedown = rtclickcheck;
	
</SCRIPT>

</head>
<body>
	<form action="/admin/registerAdmin" method="post">
        
		<h1>Add Officer</h1>
		<p>Please fill in the details</p>
		<hr>
		
		<label for="official_name"><b>Enter Official name</b></label>
		<input type="text" placeholder="Enter Official name" name="official_name" required><br>

        <label for="contact_no"><b>Contact No.</b></label> 
		<input type="text" maxlength="10" minlength="10" placeholder="Enter Contact no" name="contact_no" required><br>

		<label for="email"><b>Email</b></label>
		<input type="text" placeholder="Email" name="email" required><br>

		<label for="post">Choose a Post:</label>
        <select id="post" name="post" required>
          <option>Select Post Type...</option>
          <option value="Commisioner">Commisioner</option>
          <option value="DSP">DSP</option>
          <option value="IG">IG</option>
          <option value="Inspector">Inspector</option>
          <option value="SI">SI</option>
		  <option value="Head Constable"> Head Constable</option>
		  <option value="Constable">Constable</option>
		  
        </select>

		<input style="visibility: hidden; padding: 0px; margin: 0px;" type="text"  name="official_id" id="official_id" >
		<script>
			const official_id = document.querySelector("#official_id");
			official_id.value = localStorage.getItem('user')
		</script>

		<hr>
        <br>
        <label for="password"><b>Create Password</b></label>
		<input type="password" placeholder="Add Password"  name="password" required><br>

		<label for="confirm_password"><b>Confirm Password</b></label>
		<input type="password" placeholder="Add Password" name="confirm_password" required><br>

        <hr>
		<button type="submit" class="registerbutton">Submit</button>

	</form>
  


</body>
</html>